{
	"info": {
		"_postman_id": "ce590d06-d7df-4633-9cca-b0878ee63eeb",
		"name": "todo_api_tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Todos",
			"request": {
				"method": "GET",
				"header": [],
				"url": "http://localhost:3000/todos"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response is an array\", function () {",
							"    pm.expect(Array.isArray(pm.response.json())).to.be.true;",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "Create Todo",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\"task\":\"Created an API endpoint\"}"
				},
				"url": "http://localhost:3000/todos"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Task matches\", function () {",
							"    pm.expect(pm.response.json().task).to.eql(\"Created an API endpoint\");",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "Delete Todo",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": "http://localhost:3000/todos/1"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 or 204\", function () {",
							"    pm.expect([200, 204]).to.include(pm.response.code);",
							"});"
						]
					}
				}
			]
		}
	]
}
